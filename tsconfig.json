{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "typeRoots": ["./src/types"],
    //"noUnusedLocals": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "exclude": ["./data_backups", "./src/website/app"],
  "ts-node": {
    "files": true,
    "ignore": ["./src/retired_commands"]
  }
}
